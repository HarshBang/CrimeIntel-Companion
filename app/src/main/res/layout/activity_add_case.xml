<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".AddCaseActivity">

    <!-- ===== Top Banner ===== -->
    <ImageView
        android:id="@+id/topBanner"
        android:layout_width="0dp"
        android:layout_height="180dp"
        android:scaleType="centerCrop"
        android:src="@drawable/top_img"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <!-- ===== Scrollable Form Below Banner ===== -->
    <ScrollView
        android:id="@+id/addCaseScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="16dp"
        app:layout_constraintTop_toBottomOf="@id/topBanner"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Section 1: Case Identification -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Case Identification"
                android:textStyle="bold"
                android:paddingTop="6dp" />

            <EditText
                android:id="@+id/inputFirNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="FIR Number (unique)"
                android:inputType="text"
                android:maxLines="1" />

            <EditText
                android:id="@+id/inputCaseTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Case Title (max 100 chars)"
                android:inputType="textCapWords"
                android:maxLines="2" />

            <Spinner
                android:id="@+id/spinnerCaseType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:spinnerMode="dropdown"
                android:prompt="@string/prompt_case_type"
                android:entries="@array/case_types" />

            <TextView
                android:id="@+id/tvCaseStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Status: Active"
                android:paddingTop="6dp" />

            <!-- Section 2: Jurisdiction -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jurisdiction"
                android:textStyle="bold"
                android:paddingTop="12dp" />

            <EditText
                android:id="@+id/inputPoliceStation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Police Station Name"
                android:inputType="text" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/inputLatitude"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Lat"
                    android:inputType="numberDecimal" />

                <EditText
                    android:id="@+id/inputLongitude"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:hint="Lon"
                    android:inputType="numberDecimal" />
            </LinearLayout>

            <EditText
                android:id="@+id/inputCrimeAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Manual Address"
                android:inputType="textMultiLine" />

            <Button
                android:id="@+id/btnGetGps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Get GPS" />

            <!-- Section 3: Complainant Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complainant Details"
                android:textStyle="bold"
                android:paddingTop="12dp" />

            <EditText
                android:id="@+id/inputComplainantName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Full Name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/inputComplainantContact"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Contact Number (10 digits)"
                android:inputType="phone" />

            <EditText
                android:id="@+id/inputComplainantAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="textMultiLine" />

            <!-- Section 4: Incident Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Incident Details"
                android:textStyle="bold"
                android:paddingTop="12dp" />

            <EditText
                android:id="@+id/inputIncidentDatetime"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Incident Date &amp; Time (YYYY-MM-DD HH:mm)"
                android:inputType="datetime" />

            <EditText
                android:id="@+id/inputIncidentSummary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Brief summary (max 500 chars)"
                android:inputType="textMultiLine"
                android:maxLines="5" />

            <!-- Section 5: Officer Details -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Officer Details"
                android:textStyle="bold"
                android:paddingTop="12dp" />

            <EditText
                android:id="@+id/inputIoName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="IO Name"
                android:inputType="text"
                android:enabled="false" />

            <EditText
                android:id="@+id/inputBadgeNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Badge Number"
                android:inputType="text"
                android:enabled="false" />

            <EditText
                android:id="@+id/inputTeamMembers"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Team members (comma-separated)"
                android:inputType="text" />

            <!-- Buttons -->
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp">

                <Button
                    android:id="@+id/btnSaveDraft"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Save as Draft" />

                <Button
                    android:id="@+id/btnCreateCase"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="Create Case" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</androidx.constraintlayout.widget.ConstraintLayout>
